{
  "name": "shiki-highlight-api",
  "version": "0.1.0",
  "description": "High-performance syntax highlighting using CSS Custom Highlight API (87% fewer DOM nodes)",
  "keywords": [
    "shiki",
    "syntax-highlighting",
    "highlight-api",
    "performance",
    "markdown",
    "code",
    "css-highlights"
  ],
  "author": "Steve Hill <steve@stevehill.xyz>",
  "license": "MIT",
  "homepage": "https://github.com/stevehill1981/shiki-highlight-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevehill1981/shiki-highlight-api.git"
  },
  "bugs": {
    "url": "https://github.com/stevehill1981/shiki-highlight-api/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "peerDependencies": {
    "shiki": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@vitest/ui": "^4.0.7",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "shiki": "^3.14.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.7"
  }
}
